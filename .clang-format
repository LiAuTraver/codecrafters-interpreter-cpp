IncludeCategories:
  # 1. Related header: This should always be the first include if present.
  - Regex:           '^{dir2}/foo2\.h$'
    Priority:        0

  # 2. C system headers (e.g., <unistd.h>, <stdlib.h>).
  - Regex:           '^<.*\.h>$'
    Priority:        1

  # 3. C++ standard library headers (e.g., <algorithm>, <string>).
  - Regex:           '^<.*>$'
    Priority:        2

  # 4. Other libraries' headers, typically angle-bracketed.
  - Regex:           '^<(third_party|other_library)/.*\.h>$'
    Priority:        3

  # 5. Your project's headers, double-quoted.
  - Regex:           '^"([^"]*)"$'
    Priority:        4

IncludeIsMainRegex: '(_test)?$'
